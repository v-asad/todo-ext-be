// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  createdAt DateTime
  updatedAt DateTime?
  TodoItem  TodoItem[]
}

model Category {
  id       Int        @id @default(autoincrement())
  name     String
  TodoItem TodoItem[]
}

model TodoItem {
  id         Int       @id @default(autoincrement())
  title      String
  dueDate    DateTime?
  createdAt  DateTime
  updatedAt  DateTime?
  isDeleted  Boolean
  status     Boolean
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId Int
}
